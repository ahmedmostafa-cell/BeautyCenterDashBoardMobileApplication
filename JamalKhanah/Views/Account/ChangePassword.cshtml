@model ChangePasswordMv 

@{
	ViewData["Title"] = " Change Password";
}

<div class="page page-h custom-page">
			<div class="page-content z-documentation-10">
				<div class="container">
					<div class="row">
						<div class="col-xl-4 col-md-12 col-md-12 d-block mx-auto">
							<div class="card mb-0">
								<div class="card-header">
									<h3 class="card-title">Change Password </h3>
								</div>
								<div class="card-body">

								 <form asp-controller="Account" asp-action="ChangePassword"  method="post">

									   <div asp-validation-summary="ModelOnly" class="text-danger" style="text-align: center;"></div>
                                       
                                        <input type="hidden" asp-for="UserId" />
                                       
										
										<div class="form-group">
											<label asp-for="Password"  class="form-label text-dark"></label>
											<input asp-for="Password" class="form-control" placeholder="Password" required="" type="password" />
											<span asp-validation-for="Password" class="text-danger"></span>
										</div>
                                        
										<div class="form-group">
											<label asp-for="ConfirmPassword"  class="form-label text-dark"></label>
											<input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required="" type="password" />
											<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
										</div>

										<div class="form-footer mt-2">
											<input type="submit" value= "تأكيد كلمة السر الجديدة " class="btn btn-primary btn-block" >
										</div>
								  </form>
								   <div class="text-center text-dark mt-3 ">
									 <a asp-action="Login" asp-controller="Account">send me back to the sign in.</a> 
									</div>


								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>