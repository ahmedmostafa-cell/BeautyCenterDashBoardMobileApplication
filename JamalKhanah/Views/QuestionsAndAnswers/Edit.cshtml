@model QuestionsAndAnswers 

@{
    ViewData["Title"] = "تعديل البيانات";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">						
    <div class="col-xl-8">
        <div class="card m-b-20">
            <div class="card-header">
                <h3 class="card-title">تعديل البيانات </h3>
            </div>
            <div class="card-body mb-0"> 
                <form class="form-horizontal" asp-action="Edit" enctype="multipart/form-data" runat="server">
                    <div asp-validation-summary="All" style="margin-bottom: 2rem; text-align: center;" class="text-danger"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="IsDeleted" />
                    <input type="hidden" asp-for="UpdatedAt" />
                    <input type="hidden" asp-for="IsUpdated" />
                     
                    <div class="form-group">
                        <label asp-for="QuestionsAndAnswersSectionId" class="control-label"></label>
                        <select asp-for="QuestionsAndAnswersSectionId" class ="form-control" asp-items="ViewBag.QuestionsAndAnswersSectionId"></select>
                    </div>
                       
                    <div class="form-group">
                        <label asp-for="Question" class="control-label"></label>
                        <textarea rows="5" asp-for="Question" id="editor1" class="form-control " > </textarea>
                        <span asp-validation-for="Question" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Answer" class="control-label"></label>
                        <textarea rows="5" asp-for="Answer" id="editor1" class="form-control " > </textarea>
                        <span asp-validation-for="Answer" class="text-danger"></span>
                    </div>
                       
                    
                  
                   
                    
					
                        	

                    <div class="form-group mb-0 row justify-content-end">
                        <div class="col-md-9 float-end">
                            <input type="submit" value="تعديل " class="btn btn-primary waves-effect waves-light">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

		
 <div style="margin-bottom: 4rem;text-align: end;">
    <a asp-action="Index"class="btn btn-secondary">العودة للقائمة</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
            tinymce.init({
                selector: "textarea",
                 branding: false,
                promotion: false,
                 statusbar: false
            });
        </script>
}

