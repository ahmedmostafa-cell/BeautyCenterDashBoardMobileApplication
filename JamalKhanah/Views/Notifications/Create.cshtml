@model Notification


@{
    ViewData["Title"] = "أنشاء أشعارات ";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row">						
    <div class="col-xl-8">
        <div class="card m-b-20">
            <div class="card-header">
                <h3 class="card-title">أنشاء أشعارات</h3>
            </div>
            <div class="card-body mb-0">

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="Title"></label>
                        <div class="col-md-6 col-sm-6 ">
                            <input asp-for="Title" type="text" id="first-name" required="required" class="form-control ">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="Body"></label>
                        <div class="col-md-6 col-sm-6 ">
                            <input asp-for="Body" type="text" id="first-name" required="required" class="form-control ">
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>
                    </div>
            


                    <div class="form-group" style=" margin-top: 1rem;">
                        <input type="submit" value="حفظ" class="btn btn-primary"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



				
					
<div>
    <a asp-action="Index"class="btn btn-secondary">العودة للقائمة</a>
</div>
					




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
